{
  "lock": true,
  "nodeModulesDir": true,
  "tasks": {
    "dev:master": "deno run --watch --unstable -A ./src/main.ts --master=hono:123",
    "dev:slave": "deno run --watch --unstable -A ./src/main.ts --slave=5.4.145.90",
    "build:mac": "deno compile --unstable -A --target x86_64-apple-darwin --output docorch ./src/main.ts",
    "build:linux": "deno compile --unstable -A --target x86_64-unknown-linux-gnu --output docorch ./src/main.ts"
  },
  "lint": {
    "include": ["."],
    "exclude": ["node_modules/"],
    "rules": {
      "exclude": ["no-explicit-any", "ban-types"]
    }
  }
}
